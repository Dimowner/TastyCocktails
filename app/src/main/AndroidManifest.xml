<manifest xmlns:android="http://schemas.android.com/apk/res/android"
			 package="com.dimowner.tastycocktails">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

	<application
			android:name="com.dimowner.tastycocktails.TCApplication"
			android:allowBackup="false"
			android:icon="@mipmap/tasty_cocktail_logo"
			android:label="@string/app_name"
			android:roundIcon="@mipmap/tasty_cocktail_logo"
			android:supportsRtl="true"
			android:theme="@style/AppTheme">
		<meta-data
				android:name="com.facebook.sdk.ApplicationId"
				android:value="@string/facebook_app_id"/>

		<activity
				android:name="com.dimowner.tastycocktails.login.LoginActivity"
				android:noHistory="true"
				android:theme="@style/AppTheme.BrandedLaunch">
		</activity>

		<activity-alias
				android:name="com.dimowner.tastycocktails.cocktails.Launcher"
				android:targetActivity="com.dimowner.tastycocktails.cocktails.CocktailsActivity" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity-alias>

		<activity
				android:name="com.dimowner.tastycocktails.cocktails.CocktailsActivity"
				android:theme="@style/AppTheme.BrandedLaunch">
		</activity>

		<activity android:name="com.dimowner.tastycocktails.UserDetailsActivity"/>

		<activity
				android:name="com.dimowner.tastycocktails.favorites.FavoritesActivity"
				android:label="@string/nav_favorites"/>

		<activity
				android:name="com.dimowner.tastycocktails.history.HistoryActivity"
				android:label="@string/nav_history"/>

		<activity
				android:name="com.dimowner.tastycocktails.random.RandomActivity"
				android:theme="@style/TransparentStatusBar"/>

		<activity
				android:name="com.dimowner.tastycocktails.cocktails.details.DetailsActivity"
				android:theme="@style/TransparentStatusBar"/>

		<activity android:name="com.dimowner.tastycocktails.cocktails.details.ImagePreviewActivity"
					 android:theme="@style/TransparentStatusBar"/>

		<activity android:name="com.dimowner.tastycocktails.licences.LicenceActivity"
				android:label="@string/open_source_licences"/>
		<activity android:name="com.dimowner.tastycocktails.licences.LicenceDetail"/>

	    <meta-data
            android:name="io.fabric.ApiKey"
            android:value="a911efb38fc3ed01944c7ea4410acde51d847864" />
    </application>

</manifest>
