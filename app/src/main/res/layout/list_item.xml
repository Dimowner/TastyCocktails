<android.support.constraint.ConstraintLayout
				  xmlns:android="http://schemas.android.com/apk/res/android"
				  xmlns:app="http://schemas.android.com/apk/res-auto"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:paddingLeft="@dimen/padding_standard"
				  android:paddingStart="@dimen/padding_standard"
				  android:paddingRight="@dimen/padding_standard"
				  android:paddingEnd="@dimen/padding_standard"
				  android:paddingBottom="@dimen/padding_standard"
				  android:paddingTop="@dimen/padding_standard"
				  android:clickable="true"
				  android:orientation="vertical"
				  android:background="?android:attr/selectableItemBackground">

	<ImageView
			android:id="@+id/list_item_image"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:src="@drawable/no_image"
			android:contentDescription="@string/content_description_cocktail_image"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>

	<TextView
			android:id="@+id/list_item_name"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:textColor="@color/blue_grey_600"
			android:textSize="@dimen/text_size_xmedium"
			android:paddingLeft="@dimen/padding_standard"
			android:paddingStart="@dimen/padding_standard"
			android:paddingRight="0dp"
			android:paddingEnd="0dp"
			android:maxLines="1"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toRightOf="@+id/list_item_image"
			app:layout_constraintTop_toTopOf="parent"/>

	<TextView
			android:id="@+id/list_item_description"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:textColor="@color/blue_grey_400"
			android:textSize="@dimen/text_size_xmedium"
			app:layout_constraintRight_toRightOf="parent"
			android:paddingLeft="@dimen/padding_standard"
			android:paddingStart="@dimen/padding_standard"
			android:paddingRight="0dp"
			android:paddingEnd="0dp"
			app:layout_constraintTop_toBottomOf="@+id/list_item_name"
			app:layout_constraintLeft_toRightOf="@+id/list_item_image"
			android:maxLines="1"/>

</android.support.constraint.ConstraintLayout>
