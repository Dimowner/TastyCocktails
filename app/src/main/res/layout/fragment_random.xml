<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/root_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<android.support.constraint.ConstraintLayout
			android:id="@+id/constraint_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<ImageView
				android:id="@+id/details_image"
				android:layout_width="0dp"
				android:layout_height="220dp"
				android:scaleType="center"
				android:background="@color/colorPrimary"
				android:contentDescription="@string/content_description_cocktail_image"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				tools:layout_constraintRight_creator="1"
				tools:layout_constraintLeft_creator="1"/>

		<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:background="@color/light_red"
				android:orientation="vertical"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/details_image"
				tools:layout_constraintRight_creator="1"
				tools:layout_constraintLeft_creator="1"
				android:id="@+id/details_group_content">

			<TextView
					android:id="@+id/details_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/padding_standard"
					android:textSize="@dimen/text_size_xlarge"/>

			<TextView
					android:id="@+id/details_description"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/padding_standard"
					android:layout_marginRight="@dimen/padding_standard"
					android:layout_marginBottom="@dimen/padding_standard"
					android:textSize="@dimen/text_size_xmedium"/>
		</LinearLayout>

		<TextView
				android:id="@+id/details_content"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				app:layout_constraintLeft_toLeftOf="parent"
				android:layout_marginLeft="@dimen/padding_standard"
				android:layout_marginRight="@dimen/padding_standard"
				app:layout_constraintRight_toRightOf="parent"
				android:layout_marginTop="24dp"
				android:textSize="@dimen/text_size_xmedium"
				app:layout_constraintTop_toBottomOf="@+id/details_group_content"
				android:layout_marginStart="@dimen/padding_standard"
				android:layout_marginEnd="@dimen/padding_standard"/>

		<TextView
				android:id="@+id/details_error"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/msg_error_on_query"
				android:textSize="@dimen/text_size_xmedium"
				android:textStyle="bold"
				android:padding="@dimen/padding_standard"
				android:visibility="gone"
				android:layout_marginTop="@dimen/padding_huge"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>

		<ProgressBar
				android:id="@+id/progress"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_margin="@dimen/padding_double"
				app:layout_constraintTop_toTopOf="parent"
				android:layout_marginTop="@dimen/padding_double"
				android:visibility="gone"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"/>

	</android.support.constraint.ConstraintLayout>
</ScrollView>
