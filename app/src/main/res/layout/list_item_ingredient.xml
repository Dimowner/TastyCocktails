<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				  xmlns:tools="http://schemas.android.com/tools"
				  android:orientation="horizontal"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:paddingLeft="@dimen/padding_standard"
				  android:paddingStart="@dimen/padding_double"
				  android:paddingRight="@dimen/padding_double"
				  android:paddingEnd="@dimen/padding_double"
				  android:paddingBottom="@dimen/padding_small"
				  android:paddingTop="@dimen/padding_small"
				  android:clickable="true"
				  android:background="?android:attr/selectableItemBackground">

	<TextView
			style="@style/TextView.Label"
			android:id="@+id/list_item_ingredient_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:textSize="@dimen/text_size_xmedium"
			tools:text="Coctail name"/>

	<TextView
			style="@style/TextView.Subheader"
			android:id="@+id/list_item_ingredient_measure"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:maxLines="1"
			android:paddingLeft="@dimen/padding_standard"
			android:paddingRight="0dp"
			android:paddingStart="@dimen/padding_standard"
			android:paddingEnd="0dp"
			android:textSize="@dimen/text_size_xmedium"
			tools:text="11 oz"/>

</LinearLayout>
