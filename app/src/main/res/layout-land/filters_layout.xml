<?xml version="1.0" encoding="utf-8"?>
<card_view:android.support.v7.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:background="@color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/padding_small"
		android:layout_marginBottom="@dimen/padding_small"
		android:layout_marginStart="@dimen/padding_huge"
		android:layout_marginEnd="@dimen/padding_huge"
		android:elevation="@dimen/under_toolbar_elevation"
		card_view:cardCornerRadius="8dp">

<LinearLayout
		android:id="@+id/filters_panel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/padding_standard"
		android:orientation="vertical"
		tools:visibility="visible">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="@dimen/padding_medium"
			android:orientation="horizontal">

		<TextView
				android:layout_width="@dimen/filters_label_width"
				android:layout_height="wrap_content"
				android:fontFamily="@font/product_sans_regular"
				android:textSize="@dimen/text_size_xmedium"
				android:text="@string/category"
				/>

		<Spinner
				android:id="@+id/filter_categories"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				/>
	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="@dimen/padding_medium"
			android:orientation="horizontal">

		<TextView
				android:layout_width="@dimen/filters_label_width"
				android:layout_height="wrap_content"
				android:fontFamily="@font/product_sans_regular"
				android:textSize="@dimen/text_size_xmedium"
				android:text="@string/ingredient"
				/>

		<Spinner
				android:id="@+id/filter_ingredients"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				/>
	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="@dimen/padding_medium"
			android:orientation="horizontal">

		<TextView
				android:layout_width="@dimen/filters_label_width"
				android:layout_height="wrap_content"
				android:fontFamily="@font/product_sans_regular"
				android:textSize="@dimen/text_size_xmedium"
				android:text="@string/glass"
				/>

		<Spinner
				android:id="@+id/filter_glass"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				/>
	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<TextView
				android:layout_width="@dimen/filters_label_width"
				android:layout_height="wrap_content"
				android:fontFamily="@font/product_sans_regular"
				android:textSize="@dimen/text_size_xmedium"
				android:text="@string/alcoholic"
				/>

		<Spinner
				android:id="@+id/filter_alcoholic"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				/>
	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="end"
			android:orientation="horizontal">

		<TextView
				android:id="@+id/txtFiltersInstructions"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:drawableStart="@drawable/round_info_light_grey"
				android:drawableLeft="@drawable/round_info_light_grey"
				android:drawablePadding="@dimen/padding_small"
				android:layout_gravity="start|center"
				android:visibility="gone"
				android:padding="@dimen/padding_small"
				android:text="@string/pull_to_close"
				android:textColor="@color/light_grey"
				android:textSize="@dimen/text_size_medium"
				/>

		<Button
				style="?android:attr/buttonBarButtonStyle"
				android:id="@+id/btn_close"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/btn_close"/>
		<Button
				style="?android:attr/buttonBarButtonStyle"
				android:id="@+id/btn_clear"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/btn_clear"/>
	</LinearLayout>

</LinearLayout>
</card_view:android.support.v7.widget.CardView>